<!DOCTYPE html>
<html lang="en">
 <head>
   <title>Judges</title>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="stylesheets/style.css">
 </head>

 <body>

<header class="header">
        <div class="header__brand">
            <a class="header__logo" method="GET" href="/">
                <img src='https://storage.cloud.google.com/cs411-11-8-22/logo.png' class="header__img"></img>
            </a>

            <h1 class="header__title">National Bias Tracker</h1>
        </div>

        <nav class="primary-nav">
            <ul class="primary-nav__list">
                <li class="primary-nav__item">
                    <a href="competitions" method="GET" class='primary-nav__link'>Competitions</Link>
                </li>
                <li class="primary-nav__item">
                      <a href="skaters" method="GET" class='primary-nav__link'>Skaters</Link>
                </li>
                <li class="primary-nav__item">
                      <a href="judges" method="GET" class='primary-nav__link'>Judges</Link>
                </li>
		<li class="primary-nav__item">
                    <a href="advancedQueries" class="primary-nav__link">Advanced Queries</a>
                </li>
                <li class="primary-nav__item">
                    <a href="advancedQueriesVisual" class="primary-nav__link">Bias Visualizer</a>
                </li>
                <li class="primary-nav__item">
                    <a class="primary-nav__link" href="biasedJudges">Biased Judges</a>
                </li>
            </ul>
        </nav>
 </header>

 <div class="table-container">
     <h2 class="table-header">Judges</h2>
     <a href="judgeEdit" class="btn update-btn"> Update Table </a> 

     <form class="table-search" action="/judges-search" method="POST">
        <input class="table-search__bar type="search" id="value" name="value" placeholder="Search...">
        <select class="table-search__select id="attribute" name="attribute">
           <option value="judgeName">Name</option>
           <option value="nationality">Nationality</option>
           <option value="role">Role</option>
	   <option value="segmentCategory">Segment Category</option>
	   <option value="program">Program</option>
	   <option value="competition">Competition</option>
	</select>
        <button class="btn btn-submit" type="submit">Search</button>
     </form>

      <table class="table">
        <tbody class="table__body">
          <tr class="table__row table__row--dark">
            <th class="table__header">Name</th>
            <th class="table__header">Nationality</th>
            <th class="table__header">Role</th>
            <th class="table__header">Segment Category</th>
            <th class="table__header">Program Name</th>
	    <th class="table__header">Competition Name</th>  
        </tr>		
	
	<%
          if(userData.length!=0){
          var i=1;
          userData.forEach(function(data){
          %>
          <tr class='table__row'>
            <td class='table__data'><%=data.judgeName %></td>
            <td class='table__data'><%=data.nationality %></td>
	    <td class='table__data'><%=data.role %></td>
	    <td class='table__data'><%=data.segmentCategory %></td>
	    <td class='table__data'><%=data.program %></td>	
	    <td class='table__data'><%=data.competition %></td>
	  </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td class='table__data' colspan="7">No Data Found</td>
            </tr>
        <% } %>

	</table>	
   </div> 
 </body>
</html>
